@model IEnumerable<final_project.Data.Entities.Order>

@{
    ViewData["Title"] = "Orders listed";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-2"></div>
        <div class="col-8">
            <h2 class="text-center">Orders</h2>
            <table class="table text-center">
                <thead>
                <tr>
                    <th scope="col">Username</th>
                    <th scope="col">Order date</th>
                    <th scope="col">Address</th>
                    <th scope="col">Town</th>
                    <th scope="col">Product details</th>
                    <th scope="col">Total cost</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var order in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(item => order.User.UserName)
                        </td>
                        <td>
                            @Html.DisplayFor(item => order.OrderDate)
                        </td>
                        <td>
                            @Html.DisplayFor(item => order.Address)
                        </td>
                        <td>
                            @Html.DisplayFor(item => order.Town)
                        </td>
                        <td>
                            @Html.ActionLink("Details", "OrderDetails", "Admin", new { orderId = order.Id })
                        </td>
                        <td>
                            @Html.DisplayFor(item => order.TotalCost)
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
        <div class="col-2"></div>
    </div>
</div>