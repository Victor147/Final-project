@model IEnumerable<final_project.Data.Entities.OrderDetail>

@{
    ViewData["Title"] = "Детайли за поръчка";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-3"></div>
        <div class="col-6">
            <h2 class="text-center">Детайли за поръчка</h2>
            <table class="table text-center">
                <thead>
                <tr>
                    <th scope="col">Име на продукта</th>
                    <th scope="col">Единична цена</th>
                    <th scope="col">Количество</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var orderDetail in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(item => orderDetail.Product.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(item => orderDetail.Product.Price)
                        </td>
                        <td>
                            @Html.DisplayFor(item => orderDetail.Quantity)
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
        <div class="col-3"></div>
    </div>
</div>