@model final_project.ViewModels.ForgotPasswordViewModel

@{
    ViewData["Title"] = "Забравена парола";
}

<div class="container">
    <div class="row">
        <div class="col-lg-3"></div>
        <div class="col-lg-6">
            <form method="post" asp-controller="Authentication" asp-action="ForgotPassword">
                <h2 class="text-center mt-5 mb-4">Забравена парола</h2>
                <div class="from-group my-4">
                    <label for="username">Потребителско име: </label>
                    <span class="text-danger">*</span>
                    <input type="text" asp-for="Username" id="username" class="form-control" placeholder="Въведете потебителското си име"/>
                    <p class="mt-1">
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </p>
                </div>
                <div class="form-group my-4">
                    <input type="submit" class="btn btn-primary form-control" value="Изпращане на линк">
                </div>
            </form>
            <div class="form-group text-center mb-5">
                <a asp-controller="Authentication" asp-action="Login" class="btn btn-primary">Назад към вписването</a>
            </div>
        </div>
        <div class="col-lg-3"></div>
    </div>
</div>