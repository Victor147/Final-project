@model final_project.ViewModels.ResetPasswordViewModel

@{
    ViewData["Title"] = "Промяна на паролата";
}

<div class="container">
    <div class="row">
        <div class="col-lg-3"></div>
        <div class="col-lg-6">
            <form method="post" asp-controller="Authentication" asp-action="ResetPassword">
                <h2 class="text-center mt-5 mb-4">Промяна на паролата</h2>
                <div class="from-group my-4">
                    <label for="email">Имейл: </label>
                    <input type="text" asp-for="Email" id="email" class="form-control" placeholder="Въведете имейла си"/>
                    <p class="mt-1">
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </p>
                </div>
                <div class="from-group my-4">
                    <label for="password">Парола: </label>
                    <input type="password" asp-for="Password" id="password" class="form-control" placeholder="Въведете новата парола"/>
                    <p class="mt-1">
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </p>
                </div>
                <div class="from-group my-4">
                    <label for="repeatPassword">Повторете паролата: </label>
                    <input type="password" asp-for="ConfirmPassword" id="repeatPassword" class="form-control" placeholder="Въведете повторно новата парола"/>
                    <p class="mt-1">
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </p>
                </div>
                <div class="from-group my-4">
                    <input type="text" asp-for="Token" id="token" class="d-none"/>
                </div>
                <div class="form-group my-4">
                    <input type="submit" class="btn btn-primary form-control" value="Промяна">
                </div>
            </form>
            <div class="form-group text-center mb-5">
                <a asp-controller="Authentication" asp-action="Login" class="btn btn-primary">Назад към вписването</a>
            </div>
        </div>
        <div class="col-lg-3"></div>
    </div>
</div>