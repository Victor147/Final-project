@model final_project.Models.LoginModel

@{
    ViewData["Title"] = "Вход в профила";
}

@* TODO: implement 'forgot password' page *@

<div class="container-fluid my-5">
    <div class="row row-cols-1 row-cols-xl-3">
        <div class="col"></div>
        <div class="col">
            <form method="post" asp-controller="Authentication" asp-action="Login">
                <div class="log-reg-bgcolor px-5 py-4 rounded-huge">
                    @* <h2 class="text-center">Ecommerce app</h2> *@
                    <img src="/img/logo.png" alt="logo" class="card-img-top-custom">
                    <h2 class="text-center text-navbar mb-4">Вход</h2>
                    <div class="form-group my-2">
                        <label asp-for="Username" for="username" class="text-navbar mb-1"></label>
                        <input type="text" asp-for="Username" id="username" class="form-control">
                        <p class="mt-1">
                            <span asp-validation-for="Username" class="text-danger"></span>
                        </p>
                    </div>
                    <div class="form-group my-4">
                        <label asp-for="Password" form="password" class="text-navbar mb-1"></label>
                        <input type="password" asp-for="Password" id="password" class="form-control">
                        <p class="mt-1">
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </p>
                    </div>
                    <div class="form-group mb-4">
                        <label asp-for="RememberMe" for="rememberMe" class="text-navbar"></label>
                        <input type="checkbox" asp-for="RememberMe" id="rememberMe">
                        <p>
                            <span asp-validation-for="RememberMe" class="text-danger"></span>
                        </p>
                    </div>
                    <div class="form-group d-none">
                        <input type="hidden" asp-for="BeforePath">
                    </div>
                    <div class="d-flex justify-content-between mb-3">
                        <div class="">
                            <a href="#" class="text-decoration-none color-log-reg">Забравена парола?</a>
                        </div>
                        <div class="">
                            <div class="text-navbar">Нямате профил?</div>
                            @Html.ActionLink("Създайте нов", "Register", "Authentication", new { beforePath = Model.BeforePath == null ? "" : Model.BeforePath }, new { @class = "text-decoration-none color-log-reg" })
                            @* <a asp-controller="Authentication" asp-action="Register">Sign up here</a> *@
                        </div>
                    </div>
                    <div class="text-center mt-4">
                        <input type="submit" class="btn btn-log-reg text-navbar" value="Вход">
                    </div>
                </div>
            </form>
        </div>
        <div class="col"></div>
        <div class="col"></div>
    </div>
</div>