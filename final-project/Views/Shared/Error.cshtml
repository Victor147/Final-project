@model final_project.ViewModels.ErrorViewModel
@{
    ViewData["Title"] = "Грешка";
}

<h1 class="text-danger text-center mt-5">Грешка.</h1>
<p class="text-danger text-center h4 my-3">При обработката на заявката Ви е възникнала грешка.</p>
<p class="text-center my-3">Код на грешката: @Model.StatusCode</p>
<p class="text-center my-3">Оригинален път: @Model.OriginalPath</p>
<div class="text-center mt-5">
    @Html.ActionLink("Връщане към началната страница", "Index", "Home", new { }, new { @class = "btn btn-secondary" })
</div>