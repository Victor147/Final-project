@model final_project.Models.UpdateProductModel

@{
    ViewData["Title"] = "Редактиране на продукт";
}

<div class="container">
    <div class="row">
        <div class="col-lg-3"></div>
        <div class="col-lg-6">
            <h2 class="text-center mt-5 mb-4">Редактиране на продукт</h2>
            <form method="post" enctype="multipart/form-data" asp-controller="Product" asp-action="UpdateProduct">
                <div class="form-group my-4">
                    <label for="id" asp-for="Id">Идентификационен номер: </label>
                    <input type="number" asp-for="Id" id="id" class="form-control" value="@Model.Id" readonly="readonly">
                </div>
                <div class="form-group my-4">
                    <label for="name" asp-for="Name">Име </label>
                    <span class="text-danger">*</span>
                    <input type="text" asp-for="Name" id="name" class="form-control" value="@Model.Name" required>
                    <p class="mt-1">
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </p>
                </div>
                <div class="form-group my-4">
                    <label for="description" asp-for="Description">Описание </label>
                    <span class="text-danger">*</span>
                    <input type="text" asp-for="Description" id="description" class="form-control" value="@Model.Description" required>
                    <p class="mt-1">
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </p>
                </div>
                <div class="form-group my-4">
                    <label for="stock" asp-for="Stock">Налично количество </label>
                    <span class="text-danger">*</span>
                    <input type="number" min="0" asp-for="Stock" id="stock" class="form-control" value="@Model.Stock" required>
                    <p class="mt-1">
                        <span asp-validation-for="Stock" class="text-danger"></span>
                    </p>
                </div>
                <div class="form-group my-4">
                    <label for="price" asp-for="Price">Цена </label>
                    <span class="text-danger">*</span>
                    <input type="number" min="0" step="0.01" asp-for="Price" id="price" class="form-control" value="@Model.Price" required>
                    <p class="mt-1">
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </p>
                </div>
                <div class="form-group my-4">
                    <div>Старата снимка </div>
                    <div class="w-50 m-auto mb-4">
                        <img src="@Model.Image" alt="Снимка на продукта" class="w-100 h-100">
                    </div>
                    <input type="text" class="d-none" asp-for="Image">
                    <label for="image" asp-for="File">Избор на нова снимка </label>
                    <input type="file" accept="image/*" asp-for="File" id="image" class="form-control" placeholder="Enter product image">
                    <p class="mt-1">
                        <span asp-validation-for="File" class="text-danger"></span>
                    </p>
                </div>
                <div class="from-group my-4">
                    <label for="manufacturer">Производител </label>
                    <span class="text-danger">*</span>
                    <select asp-for="ManufacturerId" id="manufacturer" class="form-control">
                        @foreach (var elem in Model.Manufacturers)
                        {
                            <option value="@elem.Id">@elem.Name</option>
                        }
                    </select>
                </div>
                <div class="from-group my-4">
                    <label for="category">Категория </label>
                    <span class="text-danger">*</span>
                    <select asp-for="CategoryId" id="category" class="form-control">
                        @foreach (var elem in Model.Categories)
                        {
                            <option value="@elem.Id">@elem.Name</option>
                        }
                    </select>
                </div>
                <div class="form-group my-4">
                    <input type="submit" class="btn btn-warning form-control" value="Промяна">
                </div>
            </form>
            <div class="form-group text-center mb-5">
                <a class="btn btn-primary" href="/Product/ListProducts">Назад към всички продукти</a>
            </div>
        </div>
        <div class="col-lg-3"></div>
    </div>
</div>