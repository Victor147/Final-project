@model final_project.Models.ProductModel

@{
    ViewData["Title"] = "Create product page";
}

<!DOCTYPE html>

<div class="container">
    <div class="row">
        <div class="col-4"></div>
        <div class="col-4">
            <form method="post" enctype="multipart/form-data" asp-controller="Product" asp-action="CreateProduct">
                <h2 class="text-center">Create product</h2>
                <div class="from-group">
                    <label for="name">Product name: </label>
                    <input type="text" asp-for="Name" id="name" class="form-control" placeholder="Enter product name"/>
                </div>
                <div class="from-group my-3">
                    <label for="description">Product description: </label>
                    <input type="text" asp-for="Description" id="description" class="form-control" placeholder="Enter product description"/>
                </div>
                <div class="from-group my-3">
                    <label for="stock">Product stock: </label>
                    <input type="number" min="0" asp-for="Stock" id="stock" class="form-control" placeholder="Enter product stock"/>
                </div>
                <div class="from-group my-3">
                    <label for="price">Product price: </label>
                    <input type="number" min="0" step="0.01" asp-for="Price" id="price" class="form-control" placeholder="Enter product price"/>
                </div>
                <div class="from-group my-3">
                    <label for="image">Product image: </label>
                    <input type="file" accept="image/*" asp-for="Image" id="image" class="form-control" placeholder="Enter product price"/>
                </div>
                <div class="from-group my-3">
                    <label for="manufacturer">Product manufacturer: </label>
                    <select asp-for="ManufacturerId" id="manufacturer"  class="form-control">
                        @foreach (var elem in Model.Manufacturers)
                        {
                            <option value="@elem.Id">@elem.Name</option>
                        }
                    </select>
                </div>
                <div class="form-group my-3">
                    <input type="submit" class="btn btn-primary form-control" value="Create">
                </div>
            </form>
        </div>
        <div class="col-4"></div>
    </div>
</div>