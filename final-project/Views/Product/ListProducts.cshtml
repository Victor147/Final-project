@model final_project.ViewModels.ReturnPaginatedProductsViewModel

@{
    ViewData["Title"] = "Продукти";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-1"></div>
        <div class="col-md-10">
            <h2 class="text-center">Продукти</h2>
            <div>
                <a asp-action="Create" asp-controller="Product" class="btn btn-info"><i class="fa-sharp fa-solid fa-plus"></i>Създаване на нов продукт</a>
            </div>
            <table class="table text-center">
                <thead>
                <tr>
                    <th>Име</th>
                    <th>Описание</th>
                    <th>Налично количество</th>
                    <th>Цена</th>
                    <th>Снимка</th>
                    <th>Производител</th>
                    <th>Категория</th>
                    <th></th>
                </tr>
                </thead>
                <tbody>
                @foreach (var product in Model.Products)
                {
                    <tr>
                        <td>@Html.DisplayFor(item => product.Name)</td>
                        <td>@Html.DisplayFor(item => product.Description)</td>
                        <td>@Html.DisplayFor(item => product.Stock)</td>
                        <td>@Html.DisplayFor(item => product.Price)</td>
                        <td>
                            <a href="@Html.DisplayFor(item => product.Image)">Снимка</a>
                        </td>
                        <td>@Html.DisplayFor(item => product.Manufacturer.Name)</td>
                        <td>@Html.DisplayFor(item => product.Category.Name)</td>
                        <td><a href="/Product/Read/@product.Id" class="btn btn-success"><i class="fa-solid fa-magnifying-glass"></i></a><a href="/Product/Update/@product.Id" class="btn btn-warning"><i class="fa-solid fa-pen"></i></a><a href="/Product/Delete/@product.Id" class="btn btn-danger rounded"><i class="fa-regular fa-trash-can"></i></a></td>
                    </tr>
                }
                </tbody>
            </table>
            <div>@Html.ActionLink("Обратно към панел", "Panel", "Admin", "", new { @class = "btn btn-primary" })</div>
            <div class="d-flex justify-content-center">
                <partial name="_Pagination" model="Model.PaginationProperties"/>
            </div>
        </div>
        <div class="col-md-1"></div>
    </div>
</div>