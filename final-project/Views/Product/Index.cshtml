@model final_project.ViewModels.ReturnPaginatedProductsViewModel

@{
    ViewData["Title"] = "All products";
    var parameters = new Dictionary<string, string>();
}

@* filter form *@
@* TODO: design changes *@

<div class="container-fluid">
    <div class="d-flex flex-column align-items-center justify-content-center">
        <h2 class="text-center mt-4 mb-5">All products listed</h2>
        <div class="mb-4">
            @{
                parameters["MinPriceFilter"] = ViewBag.MinPriceFilter != null ? ViewBag.MinPriceFilter.ToString() : string.Empty;
                parameters["MaxPriceFilter"] = ViewBag.MaxPriceFilter != null ? ViewBag.MaxPriceFilter.ToString() : string.Empty;
                parameters["ManufacturerFilter"] = ViewBag.ManufacturerFilter != null ? ViewBag.ManufacturerFilter : string.Empty;
            }
            <form id="form" method="post" asp-action="Index" asp-controller="Product" asp-all-route-data="parameters">
                @Html.DropDownList("sortOrder", new SelectList(
                    new List<SelectListItem>
                    {
                        new SelectListItem { Text = "Name (A-Z)", Value = "name_asc" },
                        new SelectListItem { Text = "Name (Z-A)", Value = "name_desc" },
                        new SelectListItem { Text = "Price(Low to High)", Value = "price_asc" },
                        new SelectListItem { Text = "Price(High to Low)", Value = "price_desc" }
                    }, "Value", "Text", ViewBag.SortOrder), new { onchange = "this.form.submit();", @class = "btn btn-secondary dropdown-toggle" })
            </form>
        </div>
    </div>
    <div class="row">
        <div class="col-2">
            <div class="row m-auto">
                @using (Html.BeginForm("Index", "Product", new { SortOrder = ViewBag.SortOrder }, FormMethod.Post, true, new { @class = "d-flex flex-column align-items-center justify-content-center" }))
                {
                    <div>
                        <label>Manufacturer:</label>
                        @Html.DropDownList("manufacturerFilter", ViewBag.Manufacturers as SelectList, "All")
                        @* @Html.DropDownList("manufacturerFilter", ViewBag.Manufacturers as SelectList, "All" ,new { onchange = "this.form.submit();"}) *@
                    </div>
                    <div>
                        <label>Price range:</label>
                        @Html.TextBox("minPriceFilter")
                        to
                        @Html.TextBox("maxPriceFilter")
                    </div>
                    <button type="submit">Filter</button>
                }
            </div>
        </div>
        <div class="container-fluid bg-trasparent my-4 p-3" style="position: relative">
            <div class="row row-cols-1 row-cols-xs-2 row-cols-md-2 row-cols-xl-4 g-3">
                @foreach (var product in Model.Products)
                {
                    <partial name="_ProductInformationTemplate" model="product"/>
                }
            </div>
            <div class="d-flex justify-content-center mt-5">
                <partial name="_Pagination" model="Model.PaginationProperties"/>
            </div>
        </div>
        <div class="col-2"></div>
    </div>
</div>

<script>
    function submit(){
        document.getElementById("form").submit();
    }
</script>