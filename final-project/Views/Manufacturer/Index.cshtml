@model IEnumerable<final_project.ViewModels.ManufacturerViewModel>

@{
    ViewData["Title"] = "Производители";
}

<div class="container">
    <div class="row">
        <div class="col-2"></div>
        <div class="col-8">
            <h2 class="text-center">Производители</h2>
            <div>
                <a href="/Manufacturer/Create">Създаване на нов производител</a>
            </div>
            <table class="table text-center">
                <tr>
                    <th>Име</th>
                    <th></th>
                </tr>
                @foreach (var manufacturer in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(item => manufacturer.Name)</td>
                        <td><a href="/Manufacturer/Read/@manufacturer.Id" class="btn btn-success"><i class="fa-solid fa-magnifying-glass"></i></a><a href="/Manufacturer/Update/@manufacturer.Id" class="btn btn-warning"><i class="fa-solid fa-pen"></i></a><a href="/Manufacturer/Delete/@manufacturer.Id" class="btn btn-danger"><i class="fa-regular fa-trash-can"></i></a></td>
                    </tr>
                }
            </table>
            <div>@Html.ActionLink("Обратно към панела", "Panel", "Admin", "", new { @class = "btn btn-primary" })</div>
        </div>
        <div class="col-2"></div>
    </div>
</div>