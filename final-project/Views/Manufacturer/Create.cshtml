@model final_project.Models.ManufacturerModel

@{
    ViewData["Title"] = "Create manufacturer page";
}

<div class="container">
    <div class="row">
        <div class="col-4"></div>
        <div class="col-4">
            <form method="post" asp-controller="Manufacturer" asp-action="CreateManufacturer">
                <h2 class="text-center">Create manufacturer</h2>
                <div class="from-group">
                    <label for="name">Manufacturer name: </label>
                    <input type="text" asp-for="Name" id="name" class="form-control" placeholder="Enter manufacturer name"/>
                </div>
                <div class="form-group my-3">
                    <input type="submit" class="btn btn-primary form-control" value="Create">
                </div>
            </form>
        </div>
        <div class="col-4"></div>
    </div>
</div>