@model final_project.ViewModels.ManufacturerViewModel

@{
    ViewData["Title"] = "Редактиране на производител";
}

<div class="container">
    <div class="row">
        <div class="col-lg-3"></div>
        <div class="col-lg-6">
            <h2 class="text-center mt-5 mb-4">Редактиране на производител</h2>
            <form method="post" asp-controller="Manufacturer" asp-action="UpdateManufacturer">
                <div class="form-group my-4">
                    <label for="id" asp-for="Id">Идентификационен номер: </label>
                    <input type="number" asp-for="Id" id="id" class="form-control" value="@Model.Id" readonly="readonly">
                </div>
                <div class="form-group my-4">
                    <label for="name" asp-for="Name">Име </label>
                    <span class="text-danger">*</span>
                    <input type="text" asp-for="Name" id="name" class="form-control" value="@Model.Name">
                    <p class="mt-1">
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </p>
                </div>
                <div class="form-group my-4">
                    <input type="submit" class="btn btn-warning form-control" value="Промяна"/>
                </div>
            </form>
            <div class="form-group text-center mb-5">
                <a class="btn btn-primary" href="/Manufacturer/Index">Назад към всички производители</a>
            </div>
        </div>
        <div class="col-lg-3"></div>
    </div>
</div>