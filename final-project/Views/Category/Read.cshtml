@model final_project.ViewModels.CategoryViewModel

@{
    ViewData["Title"] = "Детайли за категория";
}

<div class="container">
    <div class="row">
        <div class="col-lg-3"></div>
        <div class="col-lg-6">
            <h2 class="text-center mt-5 mb-4">Детайли за категория</h2>
            <div class="form-group my-4">
                <label for="id" asp-for="Id">Идентификационен номер: </label>
                <input type="number" asp-for="Id" id="id" class="form-control" value="@Model.Id" readonly="readonly">
            </div>
            <div class="form-group my-4">
                <label for="name" asp-for="Name">Име: </label>
                <input type="text" asp-for="Name" id="name" class="form-control" value="@Model.Name" readonly="readonly">
            </div>
            <div class="form-group text-center mb-5">
                <a asp-controller="Category" asp-action="Index" class="btn btn-primary">Назад към всички категории</a>
            </div>
        </div>
        <div class="col-lg-3"></div>
    </div>
</div>
