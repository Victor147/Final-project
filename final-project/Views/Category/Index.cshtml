@model IEnumerable<final_project.ViewModels.CategoryViewModel>

@{
    ViewData["Title"] = "All Categories";
}

<div class="container">
    <div class="row">
        <div class="col-2"></div>
        <div class="col-8">
            <h2 class="text-center">All categories listed</h2>
            <div>
                <a href="/Category/Create">Create new</a>
            </div>
            <table class="table text-center">
                <tr>
                    <th>Name</th>
                    <th></th>
                </tr>
                @foreach (var category in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(item => category.Name)</td>
                        <td><a href="/Category/Read/@category.Id" class="btn btn-success"><i class="fa-solid fa-magnifying-glass"></i></a><a href="/Category/Update/@category.Id" class="btn btn-warning"><i class="fa-solid fa-pen"></i></a><a href="/Category/Delete/@category.Id" class="btn btn-danger"><i class="fa-regular fa-trash-can"></i></a></td>
                    </tr>
                }
            </table>
            <div>@Html.ActionLink("Go back to panel", "Panel", "Admin", "", new { @class = "btn btn-primary" })</div>
        </div>
        <div class="col-2"></div>
    </div>
</div>