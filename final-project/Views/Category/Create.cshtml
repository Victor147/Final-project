@model final_project.Models.CategoryModel

@{
    ViewData["Title"] = "Създаване на категория";
}

<div class="container">
    <div class="row">
        <div class="col-lg-3"></div>
        <div class="col-lg-6">
            <form method="post" asp-controller="Category" asp-action="CreateCategory">
                <h2 class="text-center mt-5 mb-4">Създаване на категория</h2>
                <div class="from-group my-4">
                    <label for="name">Име на категорията: </label>
                    <input type="text" asp-for="Name" id="name" class="form-control" placeholder="Въведете име на категорията"/>
                    <p class="mt-1">
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </p>
                </div>
                <div class="form-group my-4">
                    <input type="submit" class="btn btn-primary form-control" value="Създаване">
                </div>
            </form>
            <div class="form-group text-center mb-5">
                <a asp-controller="Category" asp-action="Index" class="btn btn-primary">Назад към всички категории</a>
            </div>
        </div>
        <div class="col-lg-3"></div>
    </div>
</div>